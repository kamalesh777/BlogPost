<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <%- include('style.ejs') %>

</head>

<body>
    <div id="admin" class="admin-login">
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <form class="form commonForm" action="/admin-login" method="post" autocomplete="off">
                        <h3 class="header">Login Now</h3>
                        <% if (errMsg != '') { %>
                            <div class="alert alert-danger">
                                <%= errMsg %>
                            </div>
                        <%  } %>
                        <div class="form-group posDepth-5">
                            <label class="text-info">User Name:</label><br>
                            <input type="text" name="username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="text-info">Password:</label><br>
                            <input type="password" name="password" class="form-control">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-gradient">Login Now</button>
                        </div>
                        <div id="register-link" class="text-left">
                            <p>Don't have admin account <a href="admin-register" class="text-info">Create here</a></p>
                        </div>
                        <%- include("formsvg.ejs") %>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
<%- include('script.ejs') %>

</html>