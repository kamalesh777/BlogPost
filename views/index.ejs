<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <%- include('style.ejs') %>
</head>

<body>
  <%- include("header.ejs") %>
  <div class="container my-5">
    <div class="row justify-content-center">
      <% articles.forEach(function(data){ %>
      <div class="col-md-4">
        <div class="box">
          <figure>
            <img src="/upload/<%= data.imageUrl %>" alt="">
          </figure>
          <h5><%= lodash.upperFirst(data.title) %></h5>
          <p class="userRow"><small><b>By : </b><a href="publisher/<%= data.author.name %>"><%= data.author.name %></a></small><small><b>Date : </b><%= data.date %></small></p>
          <% if (data.content.length > 100){ %>
          <p><%= data.content.slice(0, 100) %>....</p>
            <a href="/view-details/<%= data._id %>" class="btn btn-primary">Read More</a>
          <% } else { %>
          <p><%= data.content %> </p>
          <% } %>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
  </div>
  <%- include("footer.ejs") %>
</body>
<%- include("script.ejs") %>
</html>